<p id="notice"><%= notice %></p>

<h1>Companies : <%= current_company.company_name  %> &  <%= current_company.email %> </h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.email %></td>
        <td><%= link_to 'Show', company %> </td>
        <td><%= link_to 'add negociator', new_company_negociator_path(current_company.id) %> </td>
        <td><%= link_to 'New Property', new_company_property_path(company_id: company.id) %> </td>
        <td><%= link_to 'Edit', edit_company_path(company) %> </td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t(".sign_in", default: "Se connecter user"), new_user_session_path, class: "btn btn-danger" %>
<%= link_to t(".sign_in", default: "Se connecter company"), new_company_session_path, class: "btn btn-danger" %>
<%= link_to  "Déconnexion user", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
<%= link_to  "Déconnexion company", destroy_company_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>

