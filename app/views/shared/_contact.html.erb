<%= form_tag resultat_path, id: "address_input", method: :get, autocomplete: 'on' do %>
<%= text_field_tag :email, params[:email], {class: "namanyay-search-box", :required => true} %>
<%= text_field_tag :phone, params[:phone], {class: "namanyay-search-box", :required => true} %>
<%= text_field_tag :location, params[:location], {id: 'address', class: "namanyay-search-box", placeholder: '10 rue Nationale Lille', :required => true} %>
<%= select_tag(:room_type, options_for_select([ ['Maison', "Maison"], ['Appartement', "Appartement"], ['Terrain', "Terrain"], ['Local Commercial', "Local_Commercial"], ['Immeuble de rapport', "Immeuble_de_rapport"], ['Murs commerciaux',
"Murs_commerciaux"], ['Fonds de commerce', "Fond_de_commerce"]]), {class: "namanyay-search-box-type", :prompt => "Type de bien", :required => true}) %>
<%= select_tag(:nb_piece, options_for_select([['Aucune', "0"], ['1 pièce', "1"], ['2 pièces', "2"], ['3 pièces', "3"], ['4 pièces', "4"], ['5 pièces et +', "5 et +"]]), {class: "namanyay-search-box-room", :prompt => "Nombre de pièces", :required =>
true}) %>
<%= submit_tag "Trouver une agence", id: "namanyay-search-btn" %>
<% end %>

<script type="text/javascript">
$('input').keydown(function (e) {
  if (e.keyCode == 13) {
    $(this).closest('form').submit();
  }
});
</script>
