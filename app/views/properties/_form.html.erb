<div class="content-ajout-bien" style="margin-right: 5%">
  <%= simple_form_for @bien do |f| %>
  <div class="col-md-6 col-md-offset-3 text-center">
  <div class="row">
      <div class="form-group">
        <%= f.input :adress, :input_html =>{:id => 'address'}, placeholder: 'Adresse', label: "Adresse" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <div class="form-group">
        <h5><b>Type de bien</b></h5>
          <div class="btn-group" data-toggle="buttons">
          <% if @bien.room_type == "Appartement" %>
          <label class="btn btn-danger active" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Appartement"/> Appartement
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Appartement"/> Appartement
          </label>
          <% end %>
          <% if @bien.room_type == "Maison" %>
          <label class="btn btn-danger active" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Maison"/> Maison
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Maison"/> Maison
          </label>
          <% end %>
          <% if @bien.room_type == "Terrain" %>
          <label class="btn btn-danger active" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Terrain"/> Terrain
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Terrain"/> Terrain
          </label>
          <% end %>
          <% if @bien.room_type == "Local Commercial" %>
          <label class="btn btn-danger active" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Local Commercial"/> Local Commercial
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Local Commercial"/> Local Commercial
          </label>
          <% end %>
          <% if @bien.room_type == "Immeuble de rapport" %>
          <label class="btn btn-danger active" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Immeuble de rapport"/> Immeuble de rapport
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Immeuble de rapport"/> Immeuble de rapport
          </label>
          <% end %>
          <% if @bien.room_type == "Murs commerciaux" %>
          <label class="btn btn-danger active" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Murs commerciaux"/> Murs commerciaux
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Murs commerciaux"/> Murs commerciaux
          </label>
          <% end %>
          <% if @bien.room_type == "Fonds de commerce" %>
          <label class="btn btn-danger active" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Fonds de commerce"/> Fonds de commerce
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 5px;">
            <input id="bien_room_type_true" name="bien[room_type]" type="radio" autocomplete="off" value="Fonds de commerce"/> Fonds de commerce
          </label>
          <% end %>
          </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <div class="form-group" style="display: inline-block">
        <h5 class="text-center"><b>Nombre de pièces</b></h5>

        <div class="btn-group" data-toggle="buttons">
          <% if @bien.nb_piece == 0 %>
            <label class="btn btn-danger active" style="margin-right: 10px;">
              <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="0"/> Aucune
            </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="0"/> Aucune
          </label>
          <% end %>
          <% if @bien.nb_piece == 1 %>
          <label class="btn btn-danger active" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="1"/> 1
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="1"/> 1
          </label>
          <% end %>
          <% if @bien.nb_piece == 2 %>
          <label class="btn btn-danger active" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="2"/> 2
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="2"/> 2
          </label>
          <% end %>
          <% if @bien.nb_piece == 3 %>
          <label class="btn btn-danger active" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="3"/> 3
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="3"/> 3
          </label>
          <% end %>
          <% if @bien.nb_piece == 4 %>
          <label class="btn btn-danger active" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="4"/> 4
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="4"/> 4
          </label>
          <% end %>
          <% if @bien.nb_piece == 5 %>
          <label class="btn btn-danger active" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="5"/> 5 et +
          </label>
          <% else %>
          <label class="btn btn-danger" style="margin-right: 10px;">
            <input id="bien_nb_piece_true" name="bien[nb_piece]" type="radio" autocomplete="off" value="5"/> 5 et +
          </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="form-group">
        <%= f.input :mandat_time, :input_html =>{:id => 'datepicker'}, label: "Date de mandat" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.input :compromis_time, :input_html =>{:id => 'datepicker2'}, label: "Date de compromis" %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="form-group">
        <%= f.input :prix, placeholder: 'Prix de vente', label: 'Prix net vendeur (facultatif)' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <div class="form-group">
        <h5><b>Type de mandat</b></h5>
        <!-- <%= f.collection_radio_buttons :mandat_type, [["Simple", 'Simple'] ,["Exclusif", 'Exclusif']], :first, :last %> -->

        <div class="btn-group" data-toggle="buttons">
        <% if @bien.mandat_type == "Simple" %>
        <label class="btn btn-danger active" style="margin-right: 10px;">
          <input id="bien_mandat_type_true" name="bien[mandat_type]" type="radio" autocomplete="off" value="Simple"/> Simple
        </label>
        <% else %>
        <label class="btn btn-danger" style="margin-right: 10px;">
          <input id="bien_mandat_type_true" name="bien[mandat_type]" type="radio" autocomplete="off" value="Simple"/> Simple
        </label>
        <% end %>
        <% if @bien.mandat_type == "Exclusif" %>
        <label class="btn btn-danger active"  style="margin-right: 10px;">
          <input id="bien_mandat_type_true" name="bien[mandat_type]" type="radio" autocomplete="off" value="Exclusif" /> Exclusif
        </label>
        <% else %>
        <label class="btn btn-danger"  style="margin-right: 10px;">
          <input id="bien_mandat_type_true" name="bien[mandat_type]" type="radio" autocomplete="off" value="Exclusif" /> Exclusif
        </label>
        <% end %>
        <% if @bien.mandat_type == "Délégation" %>
        <label class="btn btn-danger active">
          <input id="bien_mandat_type_true" name="bien[mandat_type]" type="radio" autocomplete="off" value="Délégation" /> Délégation
        </label>
        <% else %>
        <label class="btn btn-danger">
          <input id="bien_mandat_type_true" name="bien[mandat_type]" type="radio" autocomplete="off" value="Délégation" /> Délégation
        </label>
        <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <div class="form-group">
        <h5><b>Négociateur (facultatif)</b></h5>
        <%= f.collection_radio_buttons(:negociateur, Nego.where(user_id: @bien.user_id), :fullname, :fullname) %>
        <%= f.collection_radio_buttons :negociateur,[["Sans négociateur", "Sans négociateur"]],:first, :last %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12 text-center">
    <%= f.button :submit, "Valider", class: "btn btn-fill callpremium btn-danger btn-lg" %>
  </div>

  <div class="clearfix"></div>
  <% end %>

</div> <!-- fin du content -->
  </div>
